.search-box {
  position: relative;
}
.e-ball {
  width: 80rpx;
  height: 80rpx;
  bottom: 10rpx;
  right: 120rpx;
  z-index: -1;
  opacity: 0;
  transition: all .5s;
}
.e-ball-on {
  z-index: 2;
  opacity: 1;
}

.ball .edit-icon {
  top: 17rpx;
}
.top-ball .edit-icon {
  top: 0;
}
.search-box-bg {
	height: 83rpx;
	background: #f2f2f2;
}
.i-user-head {
	flex: 1;
	border-radius: 100%;
}
.i-user-head .i-avatar-img {
	width:56rpx;
	height:56rpx;
	display:block;
	border-radius:100%;
	border:4rpx solid #fff;
}
.search-box .search-frame input {
	width: 448rpx;
}
.uz-box {
	height: auto;
	width: 1400rpx;
	margin-left: -650rpx;
  transition: margin-left .5s;
}
.uz-box.show-me {
	margin-left: 0;
}
.container-i {
	position: relative;
	height: auto;
	width: 750rpx;
	float: left;
}
.prevent-i {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index:3;
  background: rgba(0,0,0,0);
}
.user {
	width: 650rpx;
}
.container-u {
  height: auto;
  width: 650rpx;
  float: left;
}
.finger-box {
  position: absolute;
  top: 0;
  left: 0;
  width:100rpx;
  height:84rpx;
  background:rgba(0,153,102,0.8);
  z-index:4;
}
.finger-box .finger-pic {
  width: 64rpx;
  height: 64rpx;
  display: block;
  margin-left:10rpx;
}
.my{
  margin: 60rpx 0 400rpx;
}
.my .my-item{
  width: 600rpx;
  background: #fff;
  padding: 0;
  border-radius: 10rpx;
  margin:20rpx auto 0;
}
.my .my-item .item-con{
  flex: 1;
  position: relative;
}
.my .my-item .item-con .item-icon{
  width: 45rpx;
  height: 45rpx;
  margin-top: 20rpx;
}
.my .my-item .item-name{
  flex: 5;
  text-align: left;
  line-height: 66rpx;
  padding: 10rpx 0;
}
.my .my-item .item-name .item-txt {
  font-size: 34rpx;
  color: #666;
}
.my .my-item:last-child .item-name{
  border-bottom: none;
}
